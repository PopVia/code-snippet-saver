{
    "manifest_version": 3,
    "name": "Code Snippet Saver",
    "version": "1.1",
    "description": "Save and manage your code snippets.",
    "permissions": ["storage"],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "src/background/background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  